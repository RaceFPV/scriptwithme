<div class="ribbon-wrapper-green">
<div class="ribbon-green">HOME</div>
</div>
<h1 class="centered-text ribbon">
  Write scripts and stories with anyone
</h1>
<br/>
<h1 class="centered-text ribbon" style="width: 80%">Invite friends or strangers to write scripts in realtime</h1>

<!-- form for new character name and scene start -->
<div class="introduce form-wrapper start-the-scene-form centered-text" style="margin-top: 50px; margin-left: 40px;display:block;">
	<div class="ibl" align="center">
    
    <br/>
         <p class="robofont" style="font-size:26px;font-weight:300;">Choose your character's name</p>
     <!--<%= image_tag "usericon-small.png", :alt => "usericon", style: 'height:120px; width:120px; margin-top:-45px; margin-left:-125px;', align: 'left' %> -->
    <%= form_for :start_path, url: waiting_random_partner_path do |f| %>
    <div class="input-group" style="margin-top:5px;margin-bottom:-15px;max-width:350px;height: 50px;">
		<% if @user.characters.last == nil%>
			<%= f.text_field :character, class: "form-control centered-text", style: "font-size:26px;height: 50px;" , placeholder: 'eg. Billy', autofocus: true %>
		<% else %>
      <%= f.text_field :character, value: @user.characters.last.nickname, class: "form-control centered-text", style: "font-size:26px;height: 50px" , placeholder: 'eg. Billy', autofocus: true %>
		<% end %>
        <span class="input-group-btn">
          <%= button_tag(type: 'submit', class: "btn btn-primary", style: "height:50px;width: 50px;") do %>
       <span class="fa fa-play"></span>
        <% end %>
      </span>
      </div>
    <% end %>
    
    </div>
</div>


<!-- Live Scenes -->

  <div class="col-md-12" style="padding-top: 100px;">
  <div class="panel panel-default">
    <div class="col-md-3" style="padding-top:9px;">
      <span class="robofont" style="font-size:15px; padding-top:8px;">Watch Live Scenes:</span>
      </div>
      <div class="col-md-9">
              <% if nil == nil%>
                <div class= "" style="margin-top:10px; font-weight:300;">
                  <span class="robofont" >No live scenes currently available</span>
                </div>
              <% else %>
              <ul class="nav nav-pills">
                <% Scene.watchable?.each do |x| %>
                <% if x != nil%>
                    <li><a href="<%= live_path(x.id) %> "><%= x.title %></a></li> 
                    <% end %>
               <% end %>
             </ul>
            <% end %>
          
        </div>
      </div>
    </div>
  