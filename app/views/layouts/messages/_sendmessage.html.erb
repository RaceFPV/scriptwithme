<!-- Modal -->
<div class="modal fade" id="sendmessage" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="margin-top: 0px; margin-bottom: 0px; padding-top: 0px; padding-bottom: 0px;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="title centered-text">
        		Send a message</h3>
      </div>
    <div class="modal-body" style="padding: 10px;" align="center">
      <%= form_for :sendmessage, url: sendmessage_path(current_user.name), :html => { :id => 'sendmessageform'}, remote: true, class: 'clearfix' do |f| %>
        <%= f.label "Enter your friends username or email" %>
			  <div style="width: 70%;">
          <%= f.text_field :friendname, class: 'form-control', style: 'background: rgba(255, 255, 255, .5);', :autocomplete => :off %>
          <%= f.label "Enter your message" %>
          <%= f.text_area :message, class: 'form-control', style: 'background: rgba(255, 255, 255, .5);', :autocomplete => :off %>
          <%= f.submit 'Send', disable_with: 'Sendingâ€¦', id: 'sendmessagesubmit', class: 'btn btn-default btn-large robofont', style: 'height: 34px;background: rgba(255, 255, 255, .5);' %>
				</div>
      <% end %>
      <div id="sendsuccess" style="display: none;">
        <h3 style="color: green">Successfully sent message</h3>
      </div>
      <div id="senderror" style="display: none;">
        <h3 style="color: red">Error sending message</h3>
      </div>
      </div>
    </div>
  </div>
</div>
<!-- end of modal -->