<% flash.each do |type, message| %>
<div class="col-md-12" style="margin-top: -70px;margin-bottom:10px;">
	  <button type="button" class="close" data-dismiss="alert" aria-hidden="true" style="margin-top:9px;margin-right:10px;">&times;</button>
		<div class="alert <%= bootstrap_class_for(type) %> fade in centered-text" align="center" style="width: 100%;">
 	 	<%= message %>
		</div>
</div>
<% end %>
