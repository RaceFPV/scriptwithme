<!-- set some variables for private_pub to know where things should go -->
<% @alertsubscribe = "/alerts" %>
<% @showalert = "/users/sendalert" %>
<% @alertcontent = params[:alert][:message] %>

<!-- publish the submitted form to the private_pub server -->
<% publish_to @alertsubscribe do %>
<!-- append the new submitted form to the scene using ajax -->
$('.alertmessage').remove();
<!-- append the new submitted form to the scene using ajax -->
$("#alertmessagecontainer").append("<%= j render(@showalert) %>");
<% end %>